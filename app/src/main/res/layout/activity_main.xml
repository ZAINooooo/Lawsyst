<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f8f8ff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_logo"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/mainRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/editTextEmail"
                    android:layout_height="50dp"
                    android:background="@drawable/draw_all_roundcorner_gray_border"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:paddingStart="5dp"
                    android:text=""
                    android:hint="@string/email"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:paddingLeft="5dp" />


                <!--android:inputType="textPassword"-->
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/editTextPassword"
                    android:background="@drawable/draw_all_roundcorner_gray_border"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:paddingStart="5dp"
                    android:textColorHint="@color/colorGrey"
                    android:layout_marginBottom="5sp"
                    android:text=""
                    android:hint="@string/password"
                    android:imeOptions="actionDone"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:paddingLeft="5dp" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/login"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:background="#7FFFD4"
                    android:gravity="center"/>


                <Button
                    android:id="@+id/btnLogin2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Login With Microsoft"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/draw_all_roundcorner_blue"
                    android:gravity="center"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/btnForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Forgot Password?"
            android:textColor="	#191970"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Don't have account? Register"
            android:textColor="	#191970"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

