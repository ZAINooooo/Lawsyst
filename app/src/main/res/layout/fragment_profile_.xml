            <EditText
                android:id="@+id/dpinner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="66dp"
                android:background="@drawable/gradient_without_arrow"
                android:hint="First Name"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/dpinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/dpinner4"
                android:background="@drawable/gradient_without_arrow"
                android:hint="Last Name"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />













            <EditText
                android:id="@+id/dpinner55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/dpinner4"
                android:background="@drawable/gradient_without_arrow"
                android:hint="Last Name"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />


            <Spinner
                android:id="@+id/dpinner5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/dpinner3"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient2"
                android:spinnerMode="dropdown"
                android:textColor="@android:color/black"
                android:textSize="14sp" />






            <EditText
                android:id="@+id/dpinner6"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpinner5"
                android:layout_marginTop="14dp"
                android:background="@drawable/gradient_without_arrow"
                android:layout_marginLeft="80sp"
                android:hint="Mobile Number"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/dpinner09"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpinner5"
                android:layout_marginTop="13dp"

                android:background="@drawable/gradient_without_arrow"
                android:hint="+92"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/dpinner7"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpinner6"
                android:layout_marginTop="14dp"
                android:background="@drawable/gradient_without_arrow"
                android:layout_marginLeft="80sp"
                android:hint="Landline Number"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp"/>


            <EditText
                android:id="@+id/dpinner19"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpinner5"

                android:layout_marginTop="65dp"
                android:background="@drawable/gradient_without_arrow"
                android:hint="+92"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />



            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/dpinner6"-->
