            <EditText
                android:id="@+id/dpinner8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/dpinner7"
                android:background="@drawable/gradient_without_arrow"
                android:hint="VOIP Number"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />



            <EditText
                android:id="@+id/dpinner9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/dpinner8"
                android:background="@drawable/gradient_without_arrow"
                android:hint="Skype Id"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/dpinner10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/dpinner9"
                android:background="@drawable/gradient_without_arrow"
                android:hint="Chat Server"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />



            <EditText
                android:id="@+id/dpinner11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/dpinner10"
                android:background="@drawable/gradient_without_arrow"
                android:hint="Chat Group"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />




            <EditText
                android:id="@+id/dpinner12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@id/dpinner11"
                android:background="@drawable/gradient_without_arrow"
                android:hint="Description"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorBlack"
                android:textSize="14dp" />





            <Button
                android:id="@+id/calculate_btn"
                android:layout_width="250sp"
                android:layout_below="@id/dpinner12"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Update Profile"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"
                android:textStyle="bold" />
        </RelativeLayout>







    </LinearLayout>
</ScrollView>

