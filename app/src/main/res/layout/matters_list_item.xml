<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10sp"
    android:id="@+id/cardview1"
    android:layout_marginTop="8sp"
    android:layout_marginEnd="10sp"
    android:elevation="5sp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">


            <TextView
                android:id="@+id/matternumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:maxLength="25"
                android:text="Haji Usman Shaikh"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matter Name : "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Client Name "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assign To : "
                        android:textSize="12sp"
                        android:textStyle="bold" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mattername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="186"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/client"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CD70"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/STATUS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="17"
                        android:text="20-10-2018"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/assignto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Synced"
                        android:textAlignment="center"
                        android:textSize="12sp" />



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="12sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/delete_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:padding="5sp"
                android:src="@drawable/baseline_delete_outline_black_36"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:padding="5sp"
                android:src="@drawable/baseline_edit_black_36"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <!--<ImageButton-->
                <!--android:id="@+id/close_tv"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:background="@null"-->
                <!--android:padding="5sp"-->
                <!--android:src="@drawable/baseline_close_black_36"-->
                <!--android:textColor="#934E4E"-->
                <!--android:textSize="14sp" />-->

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>